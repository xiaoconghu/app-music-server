<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.app.music.dao.ICdDao">

    <insert id="insert">
        INSERT INTO cd (cd_name,create_user,create_time,cd_pic,description)
        VALUES
        (#{cdName},#{createUser},#{createTime},#{cdPic},#{description})
    </insert>

    <delete id="delete">
        DELETE FROM cd WHERE id= #{id}
    </delete>

    <update id="update">
        UPDATE cd
        <set>
            cd_name=#{cdName},
            cd_pic=#{cdPic},
            create_user=#{createUser},
            create_time=#{createTime},
            description=#{description},
        </set>
        WHERE id=#{cdId}
    </update>
    <select id="query" resultMap="cdMap">
        SELECT * FROM cd
    </select>
    <select id="queryById" resultMap="cdMap">
        SELECT * FROM cd WHERE id=#{cdId}
    </select>
    <resultMap id="cdMap" type="Cd">
        <result column="id" property="cdId"/>
        <result column="cd_name" property="cdName"/>
        <result column="create_user" property="createUser"/>
        <result column="create_time" property="createTime"/>
        <result column="description" property="description"/>
    </resultMap>

</mapper>